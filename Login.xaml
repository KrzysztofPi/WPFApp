<Window x:Class="ProjektZalWPF.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektZalWPF"
        mc:Ignorable="d"
        Title="Logowanie" Height="300" Width="300" Background="Beige">
    <Border Background="BlanchedAlmond" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Logowanie" Foreground="Black" FontSize="25" HorizontalAlignment="Center"></Label>
            <Separator/>
            <Label Content="Nazwa" Foreground="Black"/>
            <TextBox Name="txtNazwa" Background="LightSteelBlue" FontSize="18"/>
            <Label Content="Haslo" Foreground="Black"/>
            <PasswordBox Name="txtHaslo" Background="LightSteelBlue" FontSize="18"/>
            <Button Name="btnZaloguj" Content="Zaloguj" Margin="60 10" Background="SteelBlue" Foreground="Black" Click="btnZaloguj_Click"/>
        </StackPanel>
    </Border>
</Window>
